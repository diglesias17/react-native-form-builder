{
  "plugins": [
    "promise"
  ],
  "extends": "./.eslintrc-base.json",
  "env": {
    "browser": false,
    "node": true
  },
  "rules": {
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "promise/always-return": "error",
    "promise/no-return-wrap": "error",
    "promise/param-names": "error",
    "promise/catch-or-return": "error",
    "lodash/prefer-lodash-method": [
      "error",
      {
        "ignoreMethods": [
          "find"
        ]
      }
    ]
  }
}
